{% if not fonts %}
  {{ texts.empty }}
{% else %}
  {% for font in fonts %}
  <hr class="separador" />
  <div class="listado_elemento borrar">
    <h3 class="columna ancho5"><a href="{{ font.url }}">{{ font.title }}</a></h3>
    <div class="columna ancho10 final">
      <p class="detalles">
        {% for id in font.designers_ids %}
          {% set designer = search.page("type=designer id=" + id) %}
          <a href="{{ designer.url }}">{{ designer.title }}</a>{% if not loop.last %}, {% endif %}
        {% endfor %}
        {{ font.year }}
      </p>
      <p class="intro">
        {{ font.description | truncate(200) | md(true) | safe }}
      </p>
    </div>
  </div>
  {% endfor %}
{% endif %}